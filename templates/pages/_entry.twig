{% extends [
    '_custom/' ~ entry.slug,
    '_layout'
    ] %}

{% block header %}
    {% if entry.headerImage.one() != null %}
        {% set header_image_desktop = entry.headerImage.one().url %}
        
        <header class="image_header" style="background-image: url({{ header_image_desktop }});">
            <div class="image_header__text">{{ entry.headerText }}</div>
        </header>
    {% endif %}
{% endblock %}

{% block content %}

    {% if entry.contentBlock|length %}

        {% for block in entry.contentBlock %}

            {% include 'partials/content_blocks/'~block.type %}

        {% endfor %}

    {% endif %}

{% endblock %}

{% block common %}

    Common content for subpages is here

{% endblock %}

{% block specific %}
    {{ parent() }}
    test
{% endblock %}